{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Classe</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Classe père</th>
                <td>{{ entity.classePere }}</td>
            </tr>
            <tr>
                <th>Abreviation</th>
                <td>{{ entity.abreviation }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('classe') }}">
            Retourner à la liste
        </a>
    </li>
    <li>
        <a href="{{ path('classe_edit', { 'id': entity.id }) }}">
            Modifier
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
