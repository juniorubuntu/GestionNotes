{% extends 'SchoolGestionBundle:Default:index.html.twig' %}

{% block content -%}
    <h2>Liste des absences</h2>

    <table class="records_list table cell-border row-border table-hover panel-primary" id="absence">
        <thead class="panel-heading">
            <tr>
                <th>Id</th>
                <th>Elève </th>
                <th>Classe</th>
                <th>Séquence</th>
                <th>Année</th>
                <th>Nombre d'absence(s)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('absence_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.student.student }}</td>
                    <td>{{ entity.student.student.classe }}</td>
                    <td>{{ entity.sequence }}</td>
                    <td>{{ entity.anneeScolaire }}</td>
                    <td>{{ entity.nbreAbsence }}</td>
                    <td>
                        <a class="btn btn-info" href="{{ path('absence_show', { 'id': entity.id }) }}"><i class="glyphicon glyphicon-eye-open"></i></a>
                        <a class="btn btn-success" href="{{ path('absence_edit', { 'id': entity.id }) }}"><i class="glyphicon glyphicon-edit"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {#<ul>#}
        {#<li>#}
            {#<a href="{{ path('absence_new') }}">#}
                {#Create a new entry#}
            {#</a>#}
        {#</li>#}
    {#</ul>#}

    <script>
        $('#absence').DataTable({
            "pagingType": "full_numbers",
            "lengthMenu": [[10, 20], [10, 20]],
            "language": {
                "url": "{{ asset('DataTables/French.json') }}"
            }

        });
    </script>
{% endblock %}
