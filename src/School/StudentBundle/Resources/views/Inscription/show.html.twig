{% extends 'SchoolGestionBundle:Default:index.html.twig' %}

{% block content -%}
    <h2 class="text-center">D&eacute;tail sur une Inscription</h2>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Student</th>
                <td>{{ entity.student }}</td>
            </tr>
            <tr>
                <th>Classe</th>
                <td>{{ entity.classe }}</td>
            </tr>
            <tr>
                <th>Avance</th>
                <td>{{ entity.avance }}</td>
            </tr>
            <tr>
                <th>Datederniereavance</th>
                <td>{{ entity.dateDerniereAvance|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>Paiement 
                    {% if entity.status == 1 %}
                        <b style="color: green">Complet</b>
                    {% else %}
                        <b style="color: red">Incomplet</b>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>
    <table>
        <tr>
            <td>
                <a href="{{ path('inscription_notyet')}}" class="btn btn-primary">
                    <i class="glyphicon glyphicon-chevron-left"></i>
                    Retour &agrave; la liste
                </a>
            </td>
            <td>&nbsp;&nbsp;</td>
            <td>
                <a href="{{ path('inscription_edit',{'id': entity.id}) }}" class="btn btn-success">
                    <i class="glyphicon glyphicon-edit"> </i>
                    Modifier
                </a>
            </td>
            <td><td>&nbsp;&nbsp;</td></td>
            <td>
                {{ form(delete_form) }}
            </td>
        </tr>
    </table>
</p>
{% endblock %}
