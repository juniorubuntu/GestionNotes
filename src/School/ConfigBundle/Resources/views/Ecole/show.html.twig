{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Informations sur l'établissement</h1>

    <table class="record_properties table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom de l'établissement</th>
                <td>{{ entity.nomFrancais }}</td>
            </tr>
            <tr>
                <th>School Name</th>
                <td>{{ entity.nomAnglais }}</td>
            </tr>
            <tr>
                <th>Devise</th>
                <td>{{ entity.deviseFrancais }}</td>
            </tr>
            <tr>
                <th>School Motto</th>
                <td>{{ entity.deviseAnglais }}</td>
            </tr>
            <tr>
                <th>Boite Postal</th>
                <td>{{ entity.boitePostal }}</td>
            </tr>
        </tbody>
    </table>

    <p>
        <a href="{{ path('config_ecole')}}" class="btn btn-primary">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour à la liste
        </a>
        <a href="{{ path('config_ecole_edit',{'id': entity.id}) }}" class="btn btn-success">
            <i class="glyphicon glyphicon-edit"> </i>
            Modifier
        </a>
        <a href="{{ path('school_gestion_homepage')}}" class="btn green">
            <i class="glyphicon glyphicon-save"> </i>
            Terminé
        </a>
        {{ form(delete_form) }}
    </p>
{% endblock %}
