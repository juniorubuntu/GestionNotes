{% extends '::base.html.twig' %}

{% block body %}
    <h1>Sequence list</h1>

    <table class="records_list table table-striped panel-primary" id="seq">
        <thead class="panel-heading" >
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Details</th>
                <th>Editer</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('sequence_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.nom }}</td>
                    <td>
                        <a href="{{ path('sequence_show', { 'id': entity.id }) }}">show</a>
                    </td>
                    <td>
                        <a href="{{ path('sequence_edit', { 'id': entity.id }) }}">edit</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sequence_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    <script>
        $('#seq').DataTable({
            "pagingType": "full_numbers",
            "lengthMenu": [[10, 20], [10, 20]],
            "language": {
                "url": "{{ asset('DataTables/French.json') }}"
            }

        });
    </script>
{% endblock %}
