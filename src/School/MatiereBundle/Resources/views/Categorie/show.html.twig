{% extends 'SchoolGestionBundle:Default:index.html.twig' %}

{% block content -%}
    <h2>Détail d'une catégorie</h2>

    <table class="record_properties table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
        </tbody>
    </table>
    <table>
        <tr>
            <td>
                <a href="{{ path('categorie')}}" class="btn btn-primary">
                    <i class="glyphicon glyphicon-chevron-left"></i>
                    Retour &agrave; la liste
                </a>
            </td>
            <td><td>&nbsp;&nbsp;</td></td>
            <td>
                <a href="{{ path('categorie_edit',{'id': entity.id}) }}" class="btn btn-success">
                    <i class="glyphicon glyphicon-edit"> </i>
                    Modifier
                </a>
            </td>
            <td><td>&nbsp;&nbsp;</td></td>
            <td>
                {{ form(delete_form) }}
            </td>
        </tr>
    </table>

{% endblock %}
