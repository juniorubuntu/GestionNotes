{% extends 'SchoolGestionBundle:Default:index.html.twig' %}

{% block content -%}
    <h1>Détail d'une matière</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Abreviation</th>
                <td>{{ entity.abreviation }}</td>
            </tr>
        </tbody>
    </table>
    <p>
        <a href="{{ path('matiere')}}" class="btn btn-primary">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour &agrave; la liste
        </a>
        <a href="{{ path('matiere_edit',{'id': entity.id}) }}" class="btn btn-success">
            <i class="glyphicon glyphicon-edit"> </i>
            Modifier
        </a>
        {{ form(delete_form) }}
    </p>
{% endblock %}
