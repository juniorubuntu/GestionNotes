{% extends '::base.html.twig' %}

{% block body -%}
    <h1 class="text-center">Détail sur un Utilisateur</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Anciennete</th>
                <td>{{ entity.anciennete }}</td>
            </tr>
            <tr>
                <th>Matricule</th>
                <td>{{ entity.matricule }}</td>
            </tr>
            <tr>
                <th>Grade</th>
                <td>{{ entity.grade }}</td>
            </tr>
            <tr>
                <th>Diplomes</th>
                <td>{{ entity.diplomes }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ entity.telephone }}</td>
            </tr>
        </tbody>
    </table>
    <p>
        <a href="{{ path('school_gestion_homepage')}}" class="btn btn-primary">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retourner à la page d'accueil
        </a>
        <a href="{{ path('user_edit',{'id': entity.id}) }}" class="btn btn-success">
            <i class="glyphicon glyphicon-edit"> </i>
            Modifier
        </a>
        {#desativé pour l'instant pour une question de securité#}
        {#{{ form(delete_form) }}#}

    </p>
{% endblock %}
