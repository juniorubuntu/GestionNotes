{% extends '::base.html.twig' %}

{% block body -%}
    <h1 class="text-center">List des utilisateurs</h1>

    <table class="records_list table table-striped panel-primary" id="user">
        <thead class="panel-heading">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Anciennete</th>
                <th>Matricule</th>
                <th>Grade</th>
                <th>Diplomes</th>
                <th>Telephone</th>
                <th>Détails</th>
                <th>Modifier</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.nom }}</td>
                    <td>{{ entity.anciennete }}</td>
                    <td>{{ entity.matricule }}</td>
                    <td>{{ entity.grade }}</td>
                    <td>{{ entity.diplomes }}</td>
                    <td>{{ entity.telephone }}</td>
                    <td>
                        <a class="btn btn-info" href="{{ path('user_show', { 'id': entity.id }) }}"><i class="glyphicon glyphicon-eye-open"></i> Détails</a>
                        <a class="btn btn-success" href="{{ path('user_edit', { 'id': entity.id }) }}"><i class="glyphicon glyphicon-trash"></i> Modifier</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {#<ul>#}
        {#<li>#}
            {#<a href="{{ path('user_new') }}">#}
                {#Create a new entry#}
            {#</a>#}
        {#</li>#}
    {#</ul>#}
    <script>
        $('#user').DataTable({
            "pagingType": "full_numbers",
            "lengthMenu": [[10, 20], [10, 20]],
            "language": {
                "url": "{{ asset('DataTables/French.json') }}"
            }

        });
    </script>
{% endblock %}
